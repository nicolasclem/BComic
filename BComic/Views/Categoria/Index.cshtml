@model IEnumerable<BComic.Models.Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de categorias</h2>
        </div>
         <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-secondary">
            <i class="fa-solid fa-plus"></i>
                Nueva Categoria
            </a>
        </div>
        @if(Model.Count()>0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                         <th>
                             Nombre Categorias
                         </th>
                         <th>
                             Orden
                         </th>
                         <th>
                             Accion
                         </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th width="50%">
                                @item.NombreCategoria
                            </th>
                             <th width="30%">
                                @item.MostrarOrden
                            </th>
                             <th class="text-center" width="20%">   
                                 <div class="w-75 btn-group" role="group">
                                     <a asp-controller="Categoria" asp-action="Editar"  asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                     <a asp-controller="Categoria" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                                 </div>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Noy hay registros de Categorias</p>
        }
    </div>

</div>

